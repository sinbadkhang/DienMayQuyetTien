@model IEnumerable<WebApplication.Models.BangSanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Index</h2>
<style>
    #btnCreate a {
        color: white;
    }
</style>
<button id="btnCreate" class="btn btn-success" ">
    @Html.ActionLink("Create New", "Create")
</button>
<hr />
<table id="BangSanPham" class="table hover striped compact">
    <thead>
        <tr>
            <th>Mã SP</th>
            <th>Tên SP</th>
            <th>Giá bán</th>
            <th>Giá gốc</th>
            <th>Giá góp</th>
            <th>Tồn</th>
            <th>Loại SP</th>
            <th>Hình SP</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaSP</td>
                <td>@item.TenSP</td>
                <td>@item.GiaBan.ToString("N0")</td>
                <td>@item.GiaGoc.ToString("N0")</td>
                <td>@item.GiaGop.ToString("N0")</td>
                <td>@item.SoLuongTon.ToString("N0")</td>
                <td>@item.LoaiSanPham.TenLoai</td>
                <td>
                    @*<img src="@Url.Action("Details", new { id = item.id })" width="150" height="100" />*@
                </td>
                <td>
                    <button type="button" class="btn btn-default" aria-label="Left Align">
                        <a title="Sửa" href="@Url.Action("Edit", new { id = item.id })">
                            ✏
                        </a>
                    </button>
                    <button type="button" class="btn btn-default" aria-label="Left Align">
                        <a title="Xóa" href="@Url.Action("Delete", new { id = item.id })">
                            ❌
                        </a>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts {
<link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#BangSanPham').DataTable();
    });
</script>
}