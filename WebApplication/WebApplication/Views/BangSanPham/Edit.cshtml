@model WebApplication.Models.BangSanPham

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Chỉnh sửa SP</h2>


@using (Html.BeginForm("Edit", "BangSanPham", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal row">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.id)
        <!-- Column 1-->
        <div class="form-group col-md-6 col-sm-12">
            <div class="form-group">               
                <div class="col-md-10">
                    @Html.LabelFor(model => model.MaSP, "Mã Sản Phẩm", new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.MaSP, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaSP)
                </div>
            </div>

            <div class="form-group">             
                <div class="col-md-10">
                    @Html.LabelFor(model => model.TenSP, "Tên Sản Phẩm", new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.TenSP, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.TenSP)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.LabelFor(model => model.Loai_id, "Loại Sản Phẩm", new { @class = "control-label" })
                    @Html.DropDownListFor(model => model.Loai_id, (IEnumerable<SelectListItem>)ViewData["Loai_id"], new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Loai_id)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.Label("HinhAnh", "Hình Sản Phẩm", new { @class = "control-label" })
                    @Html.TextBox("HinhAnh", null, new { type = "file", onchange = "readURL(this);", @class = "form-control" })
                    @Html.ValidationMessage("HinhAnh")
                    <img id="HinhSP" src="@Url.Action("Details", new { id = Model.id })" style="max-width: 100%;" />
                </div>
            </div>
        </div>
        <!-- Column 2-->
        <div class="form-group col-md-6 col-sm-12">
            <div class="form-group">
                <div class="col-md-10">
                    @Html.LabelFor(model => model.GiaBan, "Giá bán", new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.GiaBan, new { @class = "form-control", type = "number" })
                    @Html.ValidationMessageFor(model => model.GiaBan)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.LabelFor(model => model.GiaGoc, "Giá gốc", new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.GiaGoc, new { @class = "form-control", type = "number" })
                    @Html.ValidationMessageFor(model => model.GiaGoc)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.LabelFor(model => model.GiaGop, "Giá góp", new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.GiaGop, new { @class = "form-control", type = "number" })
                    @Html.ValidationMessageFor(model => model.GiaGop)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.LabelFor(model => model.SoLuongTon, "Số lượng", new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.SoLuongTon, new { @class = "form-control", type = "number" })
                    @Html.ValidationMessageFor(model => model.SoLuongTon)
                </div>
            </div>

            <hr />
            <div class="form-group form-inline">
                <div class="col-md-offset-2 col-md-4">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>

                <div>
                    <button class="btn btn-default">
                        @Html.ActionLink("Back to List", "Index")
                    </button>  
                </div>
            </div>

        </div>

        
    </div>
}



@section Scripts {
@Scripts.Render("~/bundles/jqueryval")
<script>
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#HinhSP').attr('src', e.target.result);
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
}
